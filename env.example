# TallyConnect Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DB_FILE=TallyConnectDb.db

# Sync Configuration
BATCH_SIZE=5000

# Backup Configuration
BACKUP_DIR=backups
MAX_BACKUPS=30

# Log Configuration
LOG_RETENTION_DAYS=90

# Tally ODBC Configuration
DSN_PREFIX=TallyODBC64_

# Redis Cache Configuration (Phase 4: Performance & Caching)
# Set REDIS_ENABLED=true to enable Redis caching (requires redis package)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# Encryption Configuration (Phase 5: Security & Validation)
# Set ENCRYPTION_ENABLED=true to enable encryption for sensitive data
ENCRYPTION_ENABLED=false
ENCRYPTION_KEY_FILE=
# Leave ENCRYPTION_KEY_FILE empty to use default location (.keys/encryption.key)

